{
    "name": "gimlet-beta",
    "displayName": "Gimlet-beta",
    "description": "Debug Solana programs easily",
    "publisher": "emilroydev",
    "icon": "images/logo.png",
    "version": "0.1.1",
    "galleryBanner.color": {
        "color": "#21214c",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.104.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:rust",
        "onLanguage:typescript"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Solana LLDB Debugger Path",
            "properties": {
                "solanaDebugger.solanaLldbPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the solana-lldb executable"
                },
                "gimlet.enableCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Gimlet custom CodeLens in Rust files."
                }
            }
        },
        "commands": [
            {
                "command": "extension.runGimletSetup",
                "title": "Run Gimlet Setup"
            }
        ],
        "keybindings": []
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "echo 'No compilation needed for JavaScript'",
        "watch": "echo 'No watch needed for JavaScript'",
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test --config .vscode-test.json"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.9",
        "@types/node": "20.x",
        "@types/vscode": "^1.104.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.13.0",
        "globals": "^16.4.0",
        "prettier": "^3.6.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ERoydev/gimlet.git#dev/initial-version"
    },
    "dependencies": {
        "toml": "^3.0.0"
    }
}
