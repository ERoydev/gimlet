{
  "name": "solana-step-debugger",
  "displayName": "Solana Step Debugger",
  "description": "Solana Step Debugger for VS Code. It wraps your local agave-ledger-tool and solana-lldb into one easy to use debugger.",
  "publisher": "wyzax",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runAgaveLedgerTool",
        "title": "Run Agave Ledger Tool"
      },
      {
        "command": "extension.runSolanaLLDB",
        "title": "Run Solana LLDB"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed for JavaScript'",
    "watch": "echo 'No watch needed for JavaScript'",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
